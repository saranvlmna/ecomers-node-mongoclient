<section>
    <div class="container">
        <div class="row mt-5">
        </div>

        <div class="container mt-4">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Sl No</th>
                        <th scope="col">Title</th>
                        <th scope="col">Category</th>
                        <th scope="col">Discription</th>
                        <th scope="col">Image</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each product}}
                    <tr>
                        <th scope="row">1</th>
                        <td>{{this.name}}</td>
                        <td>{{this.caregory}}</td>
                        <td>{{this.desccription}}</td>
                        <td><img style="width: 50px; height: 50px;" src="/images/{{this._id}}.jpg" alt="{{this.name}}">
                        </td>

                        <td><button>-</button>&nbsp;&nbsp;&nbsp;&nbsp;<button>+</button></td>
                        <td><a href="/admin/delete-product/{{this._id}}"
                                onclick="return confirm('Are you want to delete {{this.name}}?')"><svg
                                    xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-trash" viewBox="0 0 16 16">
                                    <path
                                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                    <path fill-rule="evenodd"
                                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                </svg></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <footer style="margin-top: 10cm; margin-left: 20cm;">
            <a href="/" class="btn btn-success ml-auto">Check Out</a>
        </footer>
    </div>
</section>